{%  extends 'base.html.twig'%}
{% block title %}
    ZarzÄ…dzaj pojazdami
{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" type="text/css" href="{{ asset('css/vehicle/addKart.css') }}">
{% endblock %}
{% block body %}
    {{ parent() }}
    <div class="container">
        <div class="col-md-12 alertArea">
        </div>
        <h4 class="pageHeader"><i class="fas fa-angle-left goBack"></i>{{ actionMode }}</h4>
        <div class="row">
            <div class="col-md-4">
                {{ form_start(kartForm) }}
                <div class="form-group">
                    {{ form_label(kartForm.name) }}
                    {{ form_widget(kartForm.name) }}
                    <small class="formErrorMessage">{{ form_errors(kartForm.name) }}</small>
                    {{ form_help(kartForm.name) }}
                </div>
                <div class="form-group">
                    {{ form_label(kartForm.prize) }}
                    {{ form_widget(kartForm.prize) }}
                    <small class="formErrorMessage">{{ form_errors(kartForm.prize) }}</small>
                    <small class="form-text text-muted">{{ form_help(kartForm.prize) }}</small>
                </div>
                <div class="form-group">
                    {{ form_label(kartForm.availability) }}
                    {{ form_widget(kartForm.availability) }}
                    <small class="formErrorMessage">{{ form_errors(kartForm.availability) }}</small>
                    {{ form_help(kartForm.availability) }}
                </div>
                <div class="form-group">
                    {{ form_label(kartForm.description) }}
                    {{ form_widget(kartForm.description) }}
                    <small class="formErrorMessage">{{ form_errors(kartForm.description) }}</small>
                    {{ form_help(kartForm.description) }}
                </div>
                <div class="form-group">
                    {{ form_label(kartForm.kartTechnicalData.power) }}
                    {{ form_widget(kartForm.kartTechnicalData.power) }}
                    <small class="formErrorMessage">{{ form_errors(kartForm.kartTechnicalData.power) }}</small>
                    {{ form_help(kartForm.kartTechnicalData.power) }}
                </div>
                <div class="form-group">
                    {{ form_label(kartForm.kartTechnicalData.vmax) }}
                    {{ form_widget(kartForm.kartTechnicalData.vmax) }}
                    <small class="formErrorMessage">{{ form_errors(kartForm.kartTechnicalData.vmax) }}</small>
                    {{ form_help(kartForm.kartTechnicalData.vmax) }}
                </div>
                <div class="form-group">
                    {{ form_label(kartForm.kartTechnicalData.engine) }}
                    {{ form_widget(kartForm.kartTechnicalData.engine) }}
                    <small class="formErrorMessage">{{ form_errors(kartForm.kartTechnicalData.engine) }}</small>
                    {{ form_help(kartForm.kartTechnicalData.engine) }}
                </div>
                <div class="form-group">
                    {{ form_label(kartForm.file) }}
                    {{ form_widget(kartForm.file) }}
                    <small class="formErrorMessage">{{ form_errors(kartForm.file) }}</small>
                    {{ form_help(kartForm.file) }}
                </div>
                <div class="form-group">
                    {{ form_label(kartForm.submit) }}
                    {{ form_widget(kartForm.submit) }}
                </div>
                {{ form_end(kartForm) }}
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
{%  endblock %}
